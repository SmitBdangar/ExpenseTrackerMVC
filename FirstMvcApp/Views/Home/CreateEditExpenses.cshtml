@{
    ViewData["Title"] = "Create/Edit Expenses";
}

@model FirstMvcApp.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create / Edit Expense</h1>
</div>

<form asp-action="CreateEditExpenseForm" asp-controller="Home" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Value" class="form-label">Value</label>
        <input class="form-control" asp-for="Value" type="number" step="0.01" placeholder="0" />
        <span class="text-danger" asp-validation-for="Value"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <input class="form-control" asp-for="Description" type="text" placeholder="Add a description" />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <button class="btn btn-primary mt-3" type="submit">Submit</button>
    <a class="btn btn-secondary mt-3" asp-action="Expense">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
